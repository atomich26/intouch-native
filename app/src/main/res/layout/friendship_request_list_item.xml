<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/friendshipRequestCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp"
    android:clickable="true"
    android:backgroundTint="@android:color/transparent"
    style="?attr/materialCardViewFilledStyle">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <com.diegusmich.intouch.ui.views.GlideImageView
            android:id="@+id/actorAvatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:placeholder="@drawable/user_placeholder"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.CornerCircle"/>

        <TextView
            android:id="@+id/friendshipRequestMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:maxLines="3"
            android:singleLine="false"
            android:text="message"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@id/friendshipCreatedAtText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/actorAvatar"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/friendshipCreatedAtText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="date"
            android:textSize="12sp"
            android:maxLength="50"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/friendshipRequestMessage"
            app:layout_constraintStart_toEndOf="@id/actorAvatar"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>