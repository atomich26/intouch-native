<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/attendeesModalTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="@dimen/materialHorizontalPadding"
        android:text="@string/show_attendees"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:drawableLeft="@drawable/baseline_group_24__black"
        android:drawablePadding="10dp">
    </TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/attendeesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:paddingHorizontal="@dimen/materialHorizontalPadding" />
</androidx.appcompat.widget.LinearLayoutCompat>