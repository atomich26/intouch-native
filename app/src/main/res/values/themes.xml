<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Intouch.Base.Theme.Material3" parent="Theme.Material3.Light.NoActionBar">
        <!--<item name="fontFamily">@font/googlesans</item>
       <item name="android:fontFamily">@font/googlesans</item>-->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/md_theme_light_secondaryContainer</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="toolbarStyle">@style/Widget.Intouch.Toolbar</item>
    </style>

    <style name="Intouch.Theme.Material3" parent="Intouch.Base.Theme.Material3">
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        <item name="colorSurfaceInverse">@color/md_theme_light_inverseSurface</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_light_inverseOnSurface</item>
        <item name="colorPrimaryInverse">@color/md_theme_light_inversePrimary</item>
    </style>

    <style name="Widget.Intouch.Toolbar.Brand" parent="Widget.Material3.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.App.TitleLarge.Brand</item>
    </style>

    <style name="Widget.Intouch.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextAppearance">@style/Intouch.TextAppearance.App.TitleLarge</item>
    </style>

    <style name="Intouch.TextAppearance.App.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearance.App.TitleLarge.Brand" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/righteous</item>
        <item name="android:fontFamily">@font/righteous</item>
        <item name="android:textColor">@color/seed</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="Intouch.BottomCardView" parent="Widget.Material3.CardView.Filled">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerSizeTopLeft">40dp</item>
        <item name="cornerSizeTopRight">40dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="Intouch.Theme.FullScreenDialog" parent="Theme.Material3.Light.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
    
    <style name="ShapeAppearanceOverlay.CornerCircle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearanceOverlay.EventThumbRadius" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>

</resources>